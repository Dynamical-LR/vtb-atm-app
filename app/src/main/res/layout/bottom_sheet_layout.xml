<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/vtb_font_family"
            android:text="Фильтры по тегам"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="25dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip1"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="пешком"
                        android:textColor="@color/dark_vtb_blue"
                        android:textSize="15dp"
                        app:chipBackgroundColor="@color/white"
                        app:chipEndPadding="25dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="25dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip2"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="автобус"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/dark_vtb_blue"
                        app:chipEndPadding="25dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="25dp"
                        app:chipStrokeColor="@color/white"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/collapse_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vtb_font_family"
                        android:text="..."
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@color/dark_vtb_blue"
                        app:chipEndPadding="15dp"
                        app:chipMinHeight="40dp"
                        app:chipStartPadding="15dp"
                        app:chipStrokeColor="@color/white"
                        app:chipStrokeWidth="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdf"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/dark_vtb_blue"
                    app:chipEndPadding="25dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="25dp"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdf"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/dark_vtb_blue"
                    app:chipEndPadding="25dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="25dp"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="автобус"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/dark_vtb_blue"
                    app:chipEndPadding="25dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="25dp"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="автобус"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/dark_vtb_blue"
                    app:chipEndPadding="25dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="25dp"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="автобус"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/dark_vtb_blue"
                    app:chipEndPadding="25dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="25dp"
                    app:chipStrokeColor="@color/white"
                    app:chipStrokeWidth="1dp" />


            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/atm_card" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>